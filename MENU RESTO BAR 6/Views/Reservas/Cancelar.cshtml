@model MENU_RESTO_BAR_6.Models.Reserva


@{
    Layout = null;
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Cancelar Reserva</h4>

        <div class="alert alert-warning">
            <strong>¿Estás seguro de que deseas cancelar esta reserva?</strong>
            <p>Fecha: @Model.FechaReserva.ToString("dd/MM/yyyy HH:mm")</p>
            <p>Personas: @Model.CantPersonas</p>
        </div>

        <form asp-action="ConfirmarCancelacion" method="post">
            <input type="hidden" asp-for="ReservaId" />

            <div class="form-group mb-3">
                <label>Motivo de cancelación:</label>
                <select name="motivoId" class="form-control" required>
                    <option value="">Seleccione un motivo...</option>
                    @foreach (var motivo in ViewBag.Motivos)
                    {
                        <option value="@motivo.MotivoCancelacionId">@motivo.Descripcion</option>
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label>Otro motivo (opcional):</label>
                <textarea name="otroMotivo" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-danger">Confirmar Cancelación</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>