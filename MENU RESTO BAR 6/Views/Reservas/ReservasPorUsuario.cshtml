@model IEnumerable<MENU_RESTO_BAR_6.Models.Reserva>

@{
    ViewData["Title"] = "Reservas por Usuario";
}

<div class="menu-group">
    <h2>Reservas realizadas por el usuario</h2>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Email del Usuario</th>
                    <th>Cantidad de Personas</th>
                    <th>Fecha de la Reserva</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reserva in Model)
                {
                    <tr>
                        <td>@reserva.ReservaId</td>
                        <td>@reserva.UsuarioEmail</td>
                        <td>@reserva.CantPersonas</td>
                        <td>@reserva.FechaReserva.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@reserva.Estado</td>
                        <td>
                            <a href="@Url.Action("Detalle", "Reservas", new { id = reserva.ReservaId })" class="btn btn-info btn-sm">Detalles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning mt-3">
            No se encontraron reservas para el correo especificado.
        </div>
    }

    <a href="@Url.Action("Index", "Reservas")" class="btn btn-primary mt-3">Volver al listado</a>
</div>